    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach Remote (Debug)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
        },
        {
            "name": "Attach Remote (Debug Trace)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "log",
            "logOutput": "rpc"
        },
        {
            "name": "Launch tests (testing package)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
        }
    ]
}